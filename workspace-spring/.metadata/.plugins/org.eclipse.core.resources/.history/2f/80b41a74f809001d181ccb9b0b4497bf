<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mapper.board">						

	<resultMap type="articleDTO" id="boardResult">	
		<result property="user_board_idx" column="user_board_idx" />
		<result property="member_nickname" column="member_nickname" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="postdate" column="postdate" />
	</resultMap>					
	<select id="selectAllArticlesList" resultMap="boardResult" > 
		<![CDATA[ 		
			SELECT * FROM EZEN.HUGO_BOARD;
		 ]]>
	</select>
	
	<select id="selectNewArticleNO" resultType="int"> 	<!-- 추가하는 새글에 대한 글번호 가져옴 -->
		<![CDATA[ 	
			SELECT nvl(MAX(user_board_idx),0) + 1 FROM T_BOARD
		]]>
	</select>
	
	<insert id="insertNewArticle" parameterType="boardDTO"> 	<!-- 글정보를 Map으로 전달함 -->
		<![CDATA[ 		
			INSERT INTO EZEN.HUGO_BOARD
				(USER_BOARD_IDX, MEMBER_NICKNAME, TITLE, CONTENT, POSTDATE)
				VALUES(#{user_board_idx}, #{member_nickname}, #{title}, #{content}', sysdate
		)
		]]>
	</insert>
	
</mapper>  


















